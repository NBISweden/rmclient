$LOAD_PATH.unshift File.dirname(__FILE__) + "/../lib"

require 'rubygems'
require 'optparse'
require 'pp'
require 'chronic'
require 'rmclient'

include Rmclient

Options = Struct.new(:query, :issue, :date, :verbose, :user, :hours, :comment, :activity, :apikey, :url)


class Parser
  def self.parse(options)
    args = Options.new()
    # set defaults from environment variables
    args.url = ENV["REDMINEURL"]
    args.apikey = ENV["REDMINEAPIKEY"] 

    opt_parser = OptionParser.new do |opts|
      opts.banner = "Usage: #{File.basename($PROGRAM_NAME)} [options]"
      opts.separator ""
      opts.separator "Specific options:"

      opts.on("-rREDMINEURL", "--url=REDMINEURL", "URL to Redmine instance.") do |k|
        args.url = k
      end

      opts.on("-kAPIKEY", "--apikey=APIKEY", "Redmine API key (default: $REDMINEAPIKEY)") do |k|
        args.apikey = k
      end

      opts.on("-qQUERY", "--query=QUERY", "query redmine for activities|issues|time_entries") do |n|
        args.query = n
      end

      opts.on("-iISSUEID", "--issue=ISSUEID", "issue number") do |n|
        args.issue = n
      end

      opts.on("-aACTIVITY", "--activity=ACTIVITY", "activity for time entry") do |a|
        args.activity = a
      end

      opts.on("-dDATE", "--date=DATE", "date (can also parse e.g.\"yesterday\", \"Thursday last week\"; default: today)") do |d|
        args.date = Chronic.parse(d).to_date.iso8601
      end

      opts.on("-nHOURS", "--hours=HOURS", "no of hours to log") do |h|
        args.hours = h
      end

      opts.on("-cCOMMENT", "--comment=COMMENT", "time entry comment") do |h|
        args.comment = h
      end

      opts.on("-v", "--verbose", "verbose output") do |v|
        args.verbose = true
      end

      opts.on("-uUSERID", "--user=USERID", "Redmine user id.") do |u|
        args.user = u
      end

      opts.on("-h", "--help", "Prints this help") do
        puts opts
        exit
      end
    end

    opt_parser.parse!(options)
    return args
  end
end

# main function
def main()

  # parse options
  options = Parser.parse(ARGV)
  RestAPI._headers = { 'X-Redmine-API-Key' => options.apikey} if options.apikey
  RestAPI.site = options.url

  if(options.query)
    if(options.query.start_with?("a"))
      Rmclient.activities()
      exit
    elsif (options.query.start_with?("i"))
      Rmclient::myissues()
      exit
    elsif(options.query.start_with?("t"))
      Rmclient::timeentries()
      exit
    else 
      print "Error: Could not parse query.\n"
      exit
    end
    exit
  end

  #myissues()
  #activities()
  #mktime_entry(1647, "2016-11-09", 9, 1, "apitest1")

end

main
